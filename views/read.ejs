<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-full bg-zinc-900 p-10 text-white">
        <nav class="mb-6 px-2">
            <a class="text-blue-500" href="/">Back to Home</a>
        </nav>
        <h1 class="mb-3 text-3xl tracking-tighter text-pink-900">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0) { %>
                <% users.forEach(function(user) { %>
                    <div class="w-72 bg-zinc-800 p-4 rounded-lg">
                        <div class="w-full h-52 rounded-lg text-zinc-500 border-2 border-black overflow-hidden">
                            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="Format not supported">
                        </div>
                        <h3 class="text-xl mt-2 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-sl text-zinc-600 tracking-tighter"><%= user.email %></h5>
                        <div class="flex gap-3 mt-2">
                            <a class="text-zinc-600 hover:text-white rounded cursor-pointer" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-zinc-600 hover:text-red-600 rounded cursor-pointer" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-xl text-zinc-600">No users found.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
